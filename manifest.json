{
  "manifest_version": 3,
  "name": "Ad Request Monitor",
  "version": "1.0",
  "description": "Monitor and optionally block requests made to ad servers.",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "js": ["src/content.ts"],
      "matches": ["https://www.irctc.co.in/nget/train-search", "https://www.w3schools.com/*"]
    }
  ]
}